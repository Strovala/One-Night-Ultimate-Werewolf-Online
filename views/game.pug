extends template.pug
block content
  #content(style='width: 100%; position: relative')
    - var players= playersList
    - var button= buttonPos
    - var buttonAttributes = {}
    - buttonAttributes.style = 'top: ' + button.top + 'vh; left: ' + button.left + 'vw; position: absolute; display: none';
      #div-reveal(style='text-align: left; height: 1.5em;')&attributes(buttonAttributes)
        button#reveal(type='button')= reveal
    each player in players
      - var top = player.top
      - var left = player.left
      - var divAttributes = {}
      - divAttributes.style = 'top: ' + top + 'vh; left: ' + left + 'vw; position: absolute;'
      - var username = player.username
      - var dontDisplay = username == 'c1' || username == 'c2' || username == 'c3' || username == 'c4' 
      - var usernameAttributes = {}
      - if (dontDisplay) usernameAttributes.style = 'display: none;'
      .player-div(onclick='playerClicked(this);')&attributes(divAttributes)
        p#player-username(style='color: white; font-size: 1vw;')&attributes(usernameAttributes)= username
        img#card-back.card-back-image(src="../assets/images/card-back.png", alt="Player")
