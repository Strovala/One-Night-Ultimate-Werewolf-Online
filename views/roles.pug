table
  - var roles= rolesList
  -
    var rows = [
      roles.slice(0, 4),
      roles.slice(4, 8),
      roles.slice(8, 12),
      roles.slice(12, 16)
    ];
  each row in rows
    tr
    each role in row
      - var imageAttrs = {}
      - var opacity = role.clicked ? 1 : 0.5 ;
      - imageAttrs.style = 'opacity: ' + opacity + ';'
      td
        img.role-image(id='' + role.id, src="../assets/images/roles/" + role.id + ".png", alt="Role", onclick='toogleRoleImage(this);')&attributes(imageAttrs)
